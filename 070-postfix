#!/usr/bin/env bash
cat <<EOF | debconf-set-selections
postfix	postfix/protocols	select	all
postfix	postfix/root_address	string	devs@ginkgostreet.com
postfix	postfix/procmail	boolean	false
postfix	postfix/mailbox_limit	string	51200000
postfix	postfix/recipient_delim	string	+
postfix	postfix/chattr	boolean	false
postfix	postfix/compat_conversion_warning	boolean	true
postfix	postfix/rfc1035_violation	boolean	false
postfix	postfix/destinations	string	\$myhostname, $( hostname --long ), localhost.$( domainname ) , localhost
postfix	postfix/mynetworks	string	127.0.0.0/8 [::ffff:127.0.0.0]/104 [::1]/128
postfix	postfix/main_mailer_type	select	Internet Site
postfix	postfix/mailname	string	xyz.ginkgostreet.com
postfix	postfix/main_cf_conversion_warning	boolean	true
EOF
dpkg-reconfigure -f noninteractive postfix
