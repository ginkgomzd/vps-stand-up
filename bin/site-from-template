#!/usr/bin/env bash
SITE=$1

[ -n "$2" ] && PREFIX="$2-"

if [ ! -z "$SITE" ]; then

  gslperms project /var/www/$SITE
  cp ./tools/bad-bot-blocker/.htaccess /var/www/$SITE/htdocs/.htaccess-nobadbots

  mkdir -p /var/log/apache2/$SITE
  chown root:adm /var/log/apache2/$SITE

  sed -e "s/%%SITE%%/$SITE/" ./tools/linode-etc/apache2/sites-available/999-site.conf-template > /etc/apache2/sites-available/${PREFIX}$SITE.conf
  sed -e "s/%%SITE%%/$SITE/" ./tools/linode-etc/apache2/sites-available/999-site-ssl.conf-template > /etc/apache2/sites-available/${PREFIX}$SITE-ssl.conf
  a2ensite ${PREFIX}$SITE
  apachectl restart

fi
